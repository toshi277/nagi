<!DOCTYPE html>
<html>
  <head>
    <title>Nagi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>

    <!-- Bootstrap / FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">

    
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "Nagi", root_path, class: "navbar-brand" %>

        <!-- スマホ用トグル -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto align-items-center">

            <% if admin_signed_in? %>
              <!-- 管理者ログイン中 -->
              <li class="nav-item mr-3 text-warning">
                <span class="small"><i class="fas fa-user-shield"></i> Admin</span>
              </li>

              <li class="nav-item">
                <%= link_to destroy_admin_session_path,
                            method: :delete,
                            class: "nav-link text-warning",
                            data: { confirm: "ログアウトしますか？" } do %>
                  <i class="fas fa-sign-out-alt"></i> Admin Log out
                <% end %>
              </li>

            <% elsif user_signed_in? %>
              <!-- ユーザーログイン中：名前表示 -->
              <li class="nav-item mr-3 text-white">
                <span class="small">
                  <i class="fas fa-user"></i>
                  <%= current_user.name.presence || current_user.email %>
                </span>
              </li>

              <li class="nav-item">
                <%= link_to root_path, class: "nav-link text-white" do %>
                  <i class="fas fa-home"></i> Home
                <% end %>
              </li>

              
              <li class="nav-item">
                <%= link_to mypage_path, class: "nav-link text-white" do %>
                  <i class="fas fa-user"></i> My page
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to posts_path, class: "nav-link text-white" do %>
                  <i class="fas fa-book-open"></i> Posts
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to about_path, class: "nav-link text-white" do %>
                  <i class="fas fa-link"></i> About
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_user_session_path,
                            method: :delete,
                            class: "nav-link text-white",
                            data: { confirm: "ログアウトしますか？" } do %>
                  <i class="fas fa-sign-out-alt"></i> Log out
                <% end %>
              </li>

            <% else %>
              <!-- 未ログイン -->
              <li class="nav-item">
                <%= link_to root_path, class: "nav-link text-white" do %>
                  <i class="fas fa-home"></i> Home
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to about_path, class: "nav-link text-white" do %>
                  <i class="fas fa-link"></i> About
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_session_path, class: "nav-link text-white" do %>
                  <i class="fas fa-sign-in-alt"></i> Log in
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
                  <i class="fas fa-user-plus"></i> Sign up
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_admin_session_path,
                            class: "nav-link text-warning" do %>
                  <i class="fas fa-user-shield"></i> Admin Log in
                <% end %>
              </li>
            <% end %>

          </ul>
        </div>
      </div>
    </nav>

    
    <% if user_signed_in? && ["users", "posts"].include?(controller_name) %>
      <div class="bg-light border-bottom py-2">
        <div class="container d-flex justify-content-center">
          <%= form_with url: search_path, method: :get, local: true, class: "form-inline" do |f| %>
            <%= f.text_field :word,
                  value: params[:word],
                  placeholder: "Search...",
                  class: "form-control form-control-sm mr-2",
                  style: "width: 180px;" %>

            <%= f.select :range,
                  options_for_select([["User","user"], ["Post","post"]], params[:range]),
                  {},
                  class: "custom-select custom-select-sm mr-2 w-auto" %>

            <%= f.select :search,
                  options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]], params[:search]),
                  {},
                  class: "custom-select custom-select-sm mr-2 w-auto" %>

            <%= f.submit "検索", class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- フラッシュ -->
    <div class="container mt-3">
      <% if notice %><div class="alert alert-info"><%= notice %></div><% end %>
      <% if alert %><div class="alert alert-danger"><%= alert %></div><% end %>
    </div>

    <main class="container mt-3">
      <%= yield %>
    </main>
  </body>
</html>




