<h1>New Post</h1>

<% if @post.errors.any? %>
  <div>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |f| %>

  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Body" %><br>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= label_tag :tag_names, "タグ（カンマ区切り）" %><br>
    <%= text_field_tag :tag_names,
          params[:tag_names],
          class: "form-control",
          placeholder: "例：サウナ, 黙浴, 静けさ" %>
  </div>

  <%= f.submit "Create Post" %>

<% end %>




