<div class="container mt-4">
  <h2 class="mb-3">Search</h2>

  <p class="text-muted">
    検索ワード：<strong><%= @word %></strong>
  </p>

  <% if @range == "user" %>

    <h4 class="mt-4">Users</h4>

    <% if @users.present? %>
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name.presence || "No name" %></td>
              <td><%= user.email %></td>
              <td class="text-right">  
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">該当するユーザーが見つかりませんでした。</p>
    <% end %>

  <% else %>

    <h4 class="mt-4">Posts</h4>

    <% if @posts.present? %>
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>Title</th>
            <th>Comment</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= truncate(post.body, length: 50) %></td>
              <td class="text-right"
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">該当する投稿が見つかりませんでした。</p>
    <% end %>

  <% end %>
</div>
