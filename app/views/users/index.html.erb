<div class="container mt-4">
  <h2>Users</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name.presence || user.email %></td>
          <td class="text-right">
            <%= link_to "Show", user_path(user), class: "btn btn-sm btn-outline-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>